{
  "private": true,
  "name": "preact-specs",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src",
    "test": "jest",
    "tw:build": "npx tailwindcss -i src/tailwind.css -c tailwind.config.js -o src/index.css",
    "tw:watch": "npx tailwindcss -i src/tailwind.css -c tailwind.config.js -o src/index.css --watch"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "@permaweb/aoconnect": "^0.0.54",
    "@permaweb/stampjs": "^0.7.1",
    "@tailwindcss/typography": "^0.5.15",
    "arweave-wallet-connector": "^1.0.2",
    "crocks": "^0.12.4",
    "daisyui": "^4.12.10",
    "date-fns": "^3.6.0",
    "easymde": "^2.18.0",
    "front-matter": "^4.0.2",
    "js-yaml": "^4.1.0",
    "marked": "^14.1.2",
    "preact": "^10.10.0",
    "preact-render-to-string": "^5.2.1",
    "preact-robot": "^0.3.0",
    "preact-router": "^3.2.1",
    "ramda": "^0.30.1",
    "robot3": "^0.4.1",
    "warp-contracts": "^1.4.45",
    "warp-contracts-plugin-deploy": "^1.0.13",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.9.1",
    "@types/enzyme": "^3.10.12",
    "@types/jest": "^27.4.1",
    "@types/ramda": "^0.30.2",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "autoprefixer": "^10.4.20",
    "cosmiconfig": "^8.2.0",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.0.1",
    "eslint": "^8.20.0",
    "eslint-config-preact": "^1.3.0",
    "jest": "^27.5.1",
    "jest-preset-preact": "^4.0.5",
    "postcss": "^8.4.45",
    "preact-cli": "^3.4.0",
    "preact-cli-plugin-env-vars": "^1.2.1",
    "sirv-cli": "^2.0.2",
    "tailwindcss": "^3.4.10",
    "typescript": "^4.5.2",
    "vite": "^5.4.5"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  }
}
